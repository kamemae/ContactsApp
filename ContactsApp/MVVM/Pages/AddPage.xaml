<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ContactsApp.MVVM.Pages.AddPage" Title="Add Contact">
    <VerticalStackLayout Padding="20" Spacing="10" MaximumWidthRequest="512" MinimumHeightRequest="128">
        <Label Text="Add New Contact" FontSize="20" HorizontalOptions="Center"/>
        <Label Text="First Name:"/>
        <Entry x:Name="FirstNameEntry" Placeholder="Enter first name"/>
        <Label Text="Last Name:"/>
        <Entry x:Name="LastNameEntry" Placeholder="Enter last name"/>
        <Button Text="Add Contact" Clicked="OnConfirmClicked" Margin="0,20" BackgroundColor="Green"/>
    </VerticalStackLayout>
</ContentPage>